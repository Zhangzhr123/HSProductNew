<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <!-- 标题 明细变更 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="@string/vul_detail_change">
    </com.xuexiang.xui.widget.actionbar.TitleBar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp">
                <TextView
                        android:layout_width="@dimen/label_width"
                        android:layout_height="@dimen/label_height"
                        android:layout_margin="@dimen/input_margin"
                        android:text="条码"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/text_son"/>
                <!-- 条码扫描框 -->
                <com.xuexiang.xui.widget.edittext.ClearEditText
                        style="@style/EditText.Normal"
                        android:id="@+id/barcode"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="@dimen/input_height"
                        android:layout_margin="@dimen/input_margin"
                        android:hint="@string/vul_barcode_scan"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAlignment="center"/>
                <!-- 搜索按钮 -->
                <com.xuexiang.xui.widget.button.ButtonView
                        style="@style/ButtonView.Blue"
                        android:id="@+id/bt_getCode"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="搜索"
                        android:layout_marginTop="5dp"
                        android:visibility="visible"/>
            </LinearLayout>
            <View
                    android:layout_height="1px"
                    android:layout_width="350dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/black_textview"
                    android:id="@+id/view1"
                    android:layout_above="@+id/LL1"
                    android:layout_marginBottom="-50dp"/>
            <TableLayout
                    android:id="@+id/tl1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LL1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp">

                <TableRow android:layout_marginTop="0dp">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="规格"
                            android:textSize="@dimen/text_son"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/spesc"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:hint="请输入规格"
                            android:textAlignment="center"
                            android:editable="false"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="规格名称"
                            android:textSize="@dimen/text_son"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/spescname"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:hint="请输入规格名称"
                            android:textAlignment="center"/>
                    <com.xuexiang.xui.widget.button.ButtonView
                            style="@style/ButtonView.Blue"
                            android:id="@+id/getitnbr"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="选择规格"
                            android:layout_marginTop="5dp"
                            android:visibility="visible"/>

                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="机台"
                            android:textSize="@dimen/text_son"/>
                    <AutoCompleteTextView
                            android:id="@+id/mchid"
                            style="@style/EditText.Normal"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:hint="@string/vul_scan_mchid"
                            android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="LorR"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/text_son"/>
                    <Spinner
                            android:id="@+id/lorR"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:textAlignment="center"
                            android:background="@drawable/edit_background"
                            android:spinnerMode="dialog"
                            android:entries="@array/lr"
                    />
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="班组"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/text_son"/>
                    <Spinner
                            android:id="@+id/team"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:textAlignment="center"
                            android:spinnerMode="dialog"
                            android:background="@drawable/edit_background"
                            android:visibility="visible"/>
                </TableRow>
                <TableRow android:layout_marginTop="10dp"
                          android:visibility="gone">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="班次"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/text_son"/>
                    <Spinner
                            android:id="@+id/shift"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:textAlignment="center"
                            android:background="@drawable/edit_background"
                            android:spinnerMode="dialog"
                            android:entries="@array/shift"
                    />
                </TableRow>
                <TableRow android:layout_marginTop="5dp"
                          android:visibility="gone">
                    <TextView
                            android:layout_width="@dimen/label_width"
                            android:layout_height="@dimen/label_height"
                            android:layout_margin="@dimen/input_margin"
                            android:text="主手"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/text_son"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/master"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_margin="@dimen/input_margin"
                            android:hint="主手"
                            android:textAlignment="center"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                    android:id="@+id/ll_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tl1">

                <com.xuexiang.xui.widget.button.ButtonView
                        style="@style/ButtonView.Blue"
                        android:id="@+id/ok"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:text="确定"/>
            </LinearLayout>
</RelativeLayout>
        </ScrollView>
</LinearLayout>
