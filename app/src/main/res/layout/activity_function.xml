<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <!-- 标题 功能菜单 -->
    <include layout="@layout/titel_update"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/cx"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成型"
                        android:textSize="@dimen/text_head"
                />
                <View
                        android:layout_height="1px"
                        android:layout_width="350dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="35dp"
                        android:background="@color/black_textview"/>
                <LinearLayout
                        android:id="@+id/view9"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/forming"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/brown"
                            android:src="@drawable/btn_vplan"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成型生产"
                            android:textSize="@dimen/text_children"
                            android:textAlignment="center"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/view10"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/switchforming"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/darkviolet"
                            android:src="@drawable/formingrepl"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成型规格交替"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/view11"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="150dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/formingbarcode"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/forestgreen"
                            android:src="@drawable/outbarcode"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成型胎胚报废"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/view12"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="150dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/formingchange"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/gold"
                            android:src="@drawable/btn_detial"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成型生产变更"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/view14"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="150dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/selectformingplan"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/magenta"
                            android:src="@drawable/btn_detial"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="查看成型计划"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/view15"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="40dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/delectformingcode"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/pink"
                            android:src="@drawable/btn_detial"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成型取消扫描"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/view18"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="150dp"
                        android:visibility="gone">
                    <ImageButton
                            android:id="@+id/formingsupplement"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/darksalmon"
                            android:src="@drawable/btn_detial"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成型条码补录"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/lh"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="硫化"
                        android:textSize="@dimen/text_head"
                />
                <View
                        android:layout_height="1px"
                        android:layout_width="350dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="35dp"
                        android:background="@color/black_textview"/>
                <LinearLayout
                        android:id="@+id/view1"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
