                    />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/view20"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="50dp"
                        android:visibility="gone">
                    <ImageButton
                            style="@style/ButtonView.Blue"
                            android:id="@+id/newcheck"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/colorAccent"
                            android:src="@drawable/btn_check"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="质检"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/view21"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="50dp"
                        android:visibility="gone">
                    <ImageButton
                            style="@style/ButtonView.Blue"
                            android:id="@+id/checkagain"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:background="@color/mediumspringgreen"
                            android:src="@drawable/btn_check"
                            android:visibility="visible"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="热补复检"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_children"
                    />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/zc"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出厂"
                        android:textSize="@dimen/text_head"
                />
                <View
                        android:layout_height="1px"
                        android:layout_width="350dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/black_textview"/>
