<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <!-- 标题 条码补录 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="当班产量">
    </com.xuexiang.xui.widget.actionbar.TitleBar>

    <TableLayout
            android:id="@+id/tbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
    >
        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="95dp"
                    android:text="当班产量"
                    android:textAlignment="center"
                    android:textSize="35sp"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:id="@+id/dnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="35sp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
            android:id="@+id/ll_mchid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="visible">
        <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:text="机台"
                android:textAlignment="textStart"
                android:textSize="15sp"/>
        <com.xuexiang.xui.widget.edittext.ClearEditText
                style="@style/EditText.Normal"
                android:id="@+id/tv_MchId"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint="请扫描机台"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"/>

        <ImageButton
                android:id="@+id/getProduct"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/searth"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">
        <TextView
                android:layout_width="@dimen/label_width"
                android:layout_height="@dimen/label_height"
                android:layout_margin="@dimen/input_margin_xs"
                android:text="日期"
                android:textSize="15sp"/>
        <TextView
                android:background="@drawable/edit_background"
                android:id="@+id/tv_Date"
                android:layout_width="@dimen/input_width"
                android:layout_height="@dimen/input_height"
                android:layout_margin="@dimen/input_margin_xs"
                android:hint="YYYY-MM-DD"
                android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/showlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            android:orientation="horizontal"
            android:visibility="visible">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="当班产量："
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"/>
    </LinearLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="机台号"
                    android:textSize="15sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="左右膜"
                    android:textSize="15sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="产量"
                    android:textSize="15sp"/>
        </TableRow>
    </TableLayout>

    <ListView
            android:id="@+id/lv_product"
            android:divider="@color/btn_gray_normal"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
    </ListView>

</LinearLayout>