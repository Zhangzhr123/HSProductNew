<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>
    <!-- 标题 硫化生产 -->

    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="成型胎胚报废"/>


    <LinearLayout
            android:id="@+id/ll_mchid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="visible">
        <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="条码"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_son"/>
        <com.xuexiang.xui.widget.edittext.ClearEditText
                style="@style/EditText.Normal"
                android:id="@+id/barCode"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:hint="请扫描报废条码"
                android:maxLines="1"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:textAlignment="center"/>
        <com.xuexiang.xui.widget.button.ButtonView
                style="@style/ButtonView.Blue"
                android:id="@+id/getplan"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="报废"
                android:textColor="@color/white"
        />
<!--        <ImageButton-->
<!--                android:id="@+id/getplan"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:background="@mipmap/searth"-->
<!--        />-->
    </LinearLayout>
    <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/black_textview"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:visibility="visible">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:visibility="visible">

            <View
                    android:layout_height="1px"
                    android:layout_width="match_parent"
                    android:background="@color/black_textview"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:visibility="visible">
                <!-- 条码扫描框 -->
                <TextView
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginLeft="5dp"
                        android:text="扫描记录"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_son"/>
                <TextView
                        android:background="@drawable/edit_background"
                        android:id="@+id/barcode_log"
                        android:layout_width="270dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="250dp"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:textSize="15sp"
                        android:focusable="false"
                        android:textAlignment="center"
                        android:layout_marginLeft="-65dp"/>
                <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="-50dp"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:id="@+id/num"
                        android:visibility="visible"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
