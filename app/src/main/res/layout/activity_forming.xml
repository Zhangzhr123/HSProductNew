<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>
    <!-- 标题 规格交替 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="成型生产"/>
    <LinearLayout
            android:id="@+id/ll_mchid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="visible">
        <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:text="机台号"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_son"/>
        <AutoCompleteTextView
                android:id="@+id/mchid"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:hint="@string/vul_scan_mchid"
                android:maxLines="1"
                android:singleLine="true"
                android:completionThreshold="1"
                android:textAlignment="center"/>
        <ImageButton
                android:id="@+id/getPlan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/searth"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/showlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            android:orientation="horizontal"
            android:visibility="visible">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="已下达的计划："
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="@dimen/text_son"/>
    </LinearLayout>
    <ListView
            android:id="@+id/lv_plan"
            android:divider="@color/btn_gray_normal"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
    </ListView>

    <TableLayout
            android:id="@+id/showVplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="规格"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/spesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="规格名称"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/spescname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="优先级"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="状态"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="数量"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/pnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="班次"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:id="@+id/onclick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        <Button
                android:id="@+id/start"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_change"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="@dimen/text_head"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="开始"/>
        <Button
                android:id="@+id/update"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_change"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="@dimen/text_head"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="修改"/>
        <Button
                android:id="@+id/finish"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_change"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="@dimen/text_head"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="完成"/>
        <Button
                android:id="@+id/out"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_change"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textSize="@dimen/text_head"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="返回"/>
    </LinearLayout>

</LinearLayout>