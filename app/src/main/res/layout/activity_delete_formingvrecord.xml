<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>
    <!-- 标题 规格交替 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="成型取消扫描"/>
    <LinearLayout
            android:id="@+id/ll_plan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical" android:visibility="visible">
        <LinearLayout
                android:id="@+id/ll_mchid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="visible">
            <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="机台号"
                    android:textAlignment="textStart"
                    android:textSize="15sp"/>
            <AutoCompleteTextView
                    android:id="@+id/mchid"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/vul_scan_mchid"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:completionThreshold="1"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="visible" android:layout_below="@+id/ll_mchid">
            <TextView
                    android:layout_width="@dimen/label_width"
                    android:layout_height="@dimen/label_height"
                    android:layout_margin="@dimen/input_margin_xs"
                    android:text="日期"
                    android:textSize="15sp"/>
            <TextView
                    android:background="@drawable/edit_background"
                    android:id="@+id/date"
                    android:layout_width="@dimen/input_width"
                    android:layout_height="@dimen/input_height"
                    android:layout_margin="@dimen/input_margin_xs"
                    android:hint="YYYY-MM-DD"
                    android:textAlignment="center"/>
            <ImageButton
                    android:id="@+id/getPlan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/searth"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/showlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xui_btn_blue_normal_color"
                android:orientation="horizontal"
                android:visibility="visible">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="成型计划："
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
        </LinearLayout>
        <ListView
                android:id="@+id/lv_plan"
                android:divider="@color/btn_gray_normal"
                android:dividerHeight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
        </ListView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
        <TableLayout
                android:id="@+id/tl_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="visible">

            <TableRow>
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="规格"
                        android:textSize="15sp"/>
                <TextView
                        android:id="@+id/spesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="规格名称"
                        android:textSize="15sp"/>
                <TextView
                        android:id="@+id/spescname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="机台"
                        android:textSize="15sp"/>
                <TextView
                        android:id="@+id/tv_mchid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="日期"
                        android:textSize="15sp"/>
                <TextView
                        android:id="@+id/wdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15sp"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="visible">
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="条码"
                    android:textAlignment="textStart"
                    android:textSize="15sp"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                    style="@style/EditText.Normal"
                    android:id="@+id/barCode"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/vul_barcode_scan"
                    android:focusableInTouchMode="true"
                    android:textAlignment="center"/>
            <com.xuexiang.xui.widget.button.ButtonView
                    style="@style/ButtonView.Blue"
                    android:id="@+id/outBarCode"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="取消"
                    android:textColor="@color/white"
            />
        </LinearLayout>
        <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/black_textview"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal" android:visibility="visible">
            <!-- 条码扫描框 -->
            <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="5dp"
                    android:text="扫描记录"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            <TextView
                    android:background="@drawable/edit_background"
                    android:id="@+id/outBarCodeLog"
                    android:layout_width="270dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:textAlignment="center"
                    android:layout_marginLeft="-65dp"/>
            <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="-50dp"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:id="@+id/num"
                    android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
