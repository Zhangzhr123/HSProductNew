<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>
    <!-- 标题 硫化生产 -->

    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="@string/vul_product" />

    <LinearLayout
            android:id="@+id/ll_mchid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">
        <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="100dp"
                android:text="请扫描机台号"
                android:textAlignment="center"
                android:textSize="30sp"/>
        <com.xuexiang.xui.widget.edittext.ClearEditText
                style="@style/EditText.Normal"
                android:id="@+id/mchid"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint="@string/vul_scan_mchid"
                android:textAlignment="center"
                android:layout_marginLeft="-200dp"
                android:layout_marginTop="180dp"/>
        <com.xuexiang.xui.widget.button.ButtonView
                style="@style/ButtonView.Blue"
                android:id="@+id/bt_getPlan"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="测试"
                android:layout_marginTop="180dp" android:visibility="gone"/>
    </LinearLayout>



    <com.xuexiang.xui.widget.progress.loading.MiniLoadingView
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp" />

    <ListView
            android:id="@+id/lv_plan"
            android:divider="@color/btn_gray_normal"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:visibility="gone">

    </ListView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" android:visibility="gone">
        <!-- 条码扫描框 -->
        <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:text="条码"
                android:textAlignment="center"
                android:textSize="15sp"/>
        <com.xuexiang.xui.widget.edittext.ClearEditText
                style="@style/EditText.Normal"
                android:id="@+id/barcode"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint="@string/vul_barcode_scan"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"/>
        <com.xuexiang.xui.widget.button.ButtonView
                style="@style/ButtonView.Blue"
                android:id="@+id/barcode_ok"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="测试"
                android:layout_marginLeft="5dp" android:visibility="gone"/>
    </LinearLayout>

    <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_marginTop="45dp"
            android:background="@color/black_textview"
            android:id="@+id/view"/>
    <LinearLayout
            android:id="@+id/ll_codelog"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="45dp"
            android:orientation="horizontal" android:visibility="gone">
        <!-- 条码扫描框 -->
        <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="5dp"
                android:text="记录"
                android:textAlignment="center"
                android:textSize="15sp"/>
        <TextView
                android:background="@drawable/edit_background"
                android:id="@+id/barcode_log"
                android:layout_width="270dp"
                android:layout_marginTop="30dp"
                android:layout_height="120dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginLeft="-65dp"/>
        <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="-50dp"
                android:text="0"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/anum"
                android:visibility="visible"/>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
