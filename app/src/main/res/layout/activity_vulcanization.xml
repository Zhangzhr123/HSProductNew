    <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" android:visibility="visible">
        <!-- 条码扫描框 -->
        <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:text="扫描"
                android:textAlignment="center"
                android:textSize="@dimen/text_son"/>
        <com.xuexiang.xui.widget.edittext.ClearEditText
                style="@style/EditText.Normal"
                android:id="@+id/barcode"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint="请扫描条码"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="机台号"
                    android:textSize="@dimen/text_son"/>
            <TextView
                    android:id="@+id/mchId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/red"
                    android:textSize="20sp"/>
        </TableRow>
    </TableLayout>
    <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/black_textview"
            android:id="@+id/view"/>

    <ListView
            android:id="@+id/lv_plan"
            android:divider="@color/btn_gray_normal"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="visible">

    </ListView>
    <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/black_textview"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/ll_codelog"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="0dp"
                        android:text="当班次扫描数量"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_son"/>
                <TextView
                        android:id="@+id/sum"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="0dp"
                        android:text="0"
                        android:textColor="@color/green"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_son"/>
                <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="当次扫描数量"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_son"/>
                <TextView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_son"
                        android:id="@+id/anum"
                        android:visibility="visible"/>
            </LinearLayout>


            <TextView
                    android:background="@drawable/edit_background"
                    android:id="@+id/barcode_log"
                    android:layout_width="270dp"
                    android:layout_marginTop="0dp"
                    android:layout_height="90dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
