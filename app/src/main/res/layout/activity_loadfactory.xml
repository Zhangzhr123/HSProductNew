<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <!-- 标题 装车出厂 -->
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:id="@+id/load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="@string/load_factory"
            android:visibility="visible">
    </com.xuexiang.xui.widget.actionbar.TitleBar>
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:id="@+id/inload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="出厂扫描"
            android:visibility="gone">
    </com.xuexiang.xui.widget.actionbar.TitleBar>
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:id="@+id/outload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_btn_blue_normal_color"
            app:tb_barHeight="40dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_titleText="取消扫描"
            android:visibility="gone">
    </com.xuexiang.xui.widget.actionbar.TitleBar>

    <RelativeLayout
            android:id="@+id/page1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
    >
        <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp">
            <!-- 条码扫描框 -->
            <com.xuexiang.xui.widget.edittext.ClearEditText
                    style="@style/EditText.Normal"
                    android:id="@+id/search"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:hint="请输入车牌或仓库"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:visibility="visible"/>
            <ImageButton
                    android:id="@+id/get_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/searth"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"/>
        </LinearLayout>
        <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/black_textview"
                android:id="@+id/view2"
                android:layout_marginBottom="0dp"
                android:layout_alignBottom="@+id/ll_search"/>
        <HorizontalScrollView
                android:id="@+id/hs_load"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/view2">
            <ListView
                    android:id="@+id/listview"
                    android:divider="@color/btn_gray_normal"
                    android:dividerHeight="2dp"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:visibility="visible">
            </ListView>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/page2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
    >
        <ListView
                android:id="@+id/lv_load_fac"
                android:divider="@color/btn_gray_normal"
                android:dividerHeight="2dp"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:visibility="visible"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp">
        </ListView>
        <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/black_textview"
                android:visibility="visible"
                android:layout_alignTop="@+id/table"
                android:layout_marginTop="0dp"/>
        <TableRow
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="visible"
                android:layout_marginTop="68dp"
                android:layout_alignParentTop="true">
            <TextView
                    android:id="@+id/spesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="规格"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/text_son"
                    android:layout_alignStart="@+id/table"/>
            <View
                    android:layout_height="match_parent"
                    android:layout_width="1px"
                    android:background="@color/black_textview"
            />
            <TextView
                    android:id="@+id/number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="数量"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/text_son"/>
        </TableRow>
        <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/black_textview"
                android:layout_alignTop="@+id/table"
                android:layout_marginTop="30dp"
        />
        <HorizontalScrollView
                android:id="@+id/hs_spesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_above="@+id/view3"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/table">
            <ListView
                    android:id="@+id/lv_load_spesc"
                    android:divider="@color/btn_gray_normal"
                    android:dividerHeight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">
            </ListView>
        </HorizontalScrollView>
        <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/black_textview"
                android:id="@+id/view3"
                android:layout_above="@+id/ll_fac_ok"
                android:layout_marginBottom="0dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"/>
        <LinearLayout
                android:id="@+id/ll_fac_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp">

            <Button
                    android:id="@+id/in_scan"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="#00FF00"
                    android:text="出厂扫描"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/black_textview"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"/>

            <Button
                    android:id="@+id/out_scan"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:text="取消扫描"
                    android:textSize="15sp"
                    android:textColor="@color/black_textview"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"/>

            <Button
                    android:id="@+id/out"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/gray_pressed"
                    android:text="返回"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"/>

            <Button
                    android:id="@+id/loadfac_ok"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/theme"
                    android:text="装车完成"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"/>

        </LinearLayout>
    </RelativeLayout>


    <ScrollView
            android:id="@+id/page3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <RelativeLayout
                    android:id="@+id/page3_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
            >
                <LinearLayout
                        android:id="@+id/ll_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp">
                    <!-- 条码扫描框 -->
                    <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:text="条码："
                            android:textAlignment="center"
                            android:textSize="@dimen/text_son"/>
                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/barcode"
                            android:layout_width="160dp"
                            android:layout_height="25dp"
                            android:gravity="top"
                            android:textAlignment="center"
                            android:layout_marginTop="0dp"/>
                </LinearLayout>
                <View
                        android:layout_height="1px"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/black_textview"
                        android:id="@+id/view5"
                        android:layout_below="@+id/ll_code"/>
                <TableLayout
                        android:id="@+id/ll_table"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="75dp"
                        android:visibility="visible"
                        android:layout_below="@+id/view5">
                    <TableRow>
                        <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="规格"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_son"/>
                        <TextView
                                android:id="@+id/itnbr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="@dimen/text_children"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="规格名称"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_son"/>
                        <TextView
                                android:id="@+id/itndsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="@dimen/text_children"/>
                    </TableRow>

                </TableLayout>
                <View
                        android:layout_height="1px"
                        android:layout_width="match_parent"
                        android:background="@color/black_textview"
                        android:visibility="visible"
                        android:id="@+id/view6"
                        android:layout_below="@+id/ll_table"/>
                <LinearLayout
                        android:id="@+id/ll_codelog"
                        android:layout_width="match_parent"
                        android:layout_marginTop="130dp"
                        android:layout_height="180dp"
                        android:orientation="horizontal"
                        android:visibility="visible">
                    <!-- 条码扫描框 -->
                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="-10dp"
                            android:layout_marginLeft="5dp"
                            android:text="记录"
                            android:textAlignment="center"
                            android:textSize="15sp"/>
                    <TextView
                            android:background="@drawable/edit_background"
                            android:id="@+id/barcode_log"
                            android:layout_width="270dp"
                            android:layout_marginTop="30dp"
                            android:layout_height="120dp"
                            android:gravity="top"
                            android:scrollbars="vertical"
                            android:textAlignment="center"
                            android:layout_marginLeft="-65dp"/>
                    <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="-50dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:textColor="@color/red"
                            android:id="@+id/anum"
                            android:visibility="visible"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_scan_ok"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:layout_below="@+id/ll_codelog"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp">

                    <com.xuexiang.xui.widget.button.ButtonView
                            style="@style/ButtonView.Blue"
                            android:id="@+id/ok"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:text="返回"
                            android:layout_gravity="center"
                            android:visibility="visible"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/page3_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
            >
                <LinearLayout
                        android:id="@+id/ll_out_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:visibility="visible">
                    <!-- 条码扫描框 -->
                    <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:text="条码"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_son"/>

                    <com.xuexiang.xui.widget.edittext.ClearEditText
                            style="@style/EditText.Normal"
                            android:id="@+id/out_barcode"
                            android:layout_width="160dp"
                            android:layout_height="25dp"
                            android:gravity="top"
                            android:textAlignment="center"
                            android:layout_marginTop="0dp"
                            android:visibility="visible"/>
                </LinearLayout>

                <View
                        android:layout_height="1px"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/black_textview"
                        android:layout_below="@+id/ll_out_code"/>

                <LinearLayout
                        android:id="@+id/ll_out_codelog"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="50dp"
                        android:orientation="horizontal"
                        android:visibility="visible">
                    <!-- 条码扫描框 -->
                    <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="-10dp"
                            android:layout_marginLeft="5dp"
                            android:text="记录"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_son"/>
                    <TextView
                            android:background="@drawable/edit_background"
                            android:id="@+id/out_barcode_log"
                            android:layout_width="270dp"
                            android:layout_marginTop="30dp"
                            android:layout_height="190dp"
                            android:gravity="top"
                            android:scrollbars="vertical"
                            android:textAlignment="center"
                            android:layout_marginLeft="-65dp"/>
                    <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="-50dp"
                            android:text="0"
                            android:textColor="@color/red"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:id="@+id/out_anum"
                            android:visibility="visible"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_scan_out_ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="300dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                    <com.xuexiang.xui.widget.button.ButtonView
                            style="@style/ButtonView.Blue"
                            android:id="@+id/out_ok"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:text="返回"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="60dp"
                            android:visibility="visible"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>